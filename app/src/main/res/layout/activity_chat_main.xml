<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chat_MainActivity">

    <FrameLayout
        android:id="@+id/ChatMainActivity_framelayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/ChatMainActivity_bottomnavigationview"
        ></FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ChatMainActivity_bottomnavigationview"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemTextColor="@color/colorNavIcon"
        app:itemIconTint="@color/colorNavIcon"
        app:menu="@menu/bottom_navigation_chat_main"
        >

    </android.support.design.widget.BottomNavigationView>

</RelativeLayout>